    <Script type="xscript5.1"><![CDATA[this.pos3030fm_onload = function(obj:nexacro.Form,e:nexacro.LoadEventInfo)
{
    var sSvcId  = "svcEmpLoad";
    var sUrl    = "SvcUrl::pos/EmpLoad.do";
    var outData = "ds_emp=ds_emp";
    this.gfnTransaction(sSvcId, sUrl, "", outData, "fnCallback");
};

// 1. 트랜잭션 완료 후 실행될 콜백 함수
this.fnCallback = function(svcId, errCode, errMsg)
{
    if (errCode < 0) return; // 에러 발생 시 중단

    if (svcId == "svcEmpLoad") {
        // 데이터가 로드된 직후, 첫 번째 행의 이미지를 보여줍니다.
        this.fn_setEmpImage();
    }
};

// 이미지 설정 로직 공통 함수
this.fn_setEmpImage = function()
{
    var nRow = this.ds_emp.rowposition; 
    var sImgNm = this.ds_emp.getColumn(nRow, "emp_img");
    
    if (sImgNm) {
        var sFullUrl = this.gfnGetServerUrl() + "upload/P03/P031/" + sImgNm;
        this.Div00.form.ImageViewer00.set_image(sFullUrl); // set_image 사용 권장
    } else {
        this.Div00.form.ImageViewer00.set_image(""); 
    }
};

//그리드 변경 시 이미지 호출
this.Grid00_onselectchanged = function(obj:nexacro.Grid, e:nexacro.GridSelectEventInfo)
{
    this.fn_setEmpImage();
};



// 검색버튼

this.btn_findEmp_onclick = function(obj:nexacro.Button,e:nexacro.ClickEventInfo)
{
	this.ds_emp.filter("name.indexOf('" +this.edt_SEARCH.value+"')>-1");
};

]]></Script>
